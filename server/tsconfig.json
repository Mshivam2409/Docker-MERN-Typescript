{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "sourceMap": true,
    "outDir": "build",
    "baseUrl": "src/",
    "allowJs": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "node": ["../node_modules/*"]
    }
  },
  "include": ["src/**/*"]
}
